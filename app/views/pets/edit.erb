<h1>Update Pet</h1>
<form action="/pets/<%=@pet.id%>" method="post">
  <!-- <label>Name:</label> -->
<input type="text" name="pet_name" value="pet_name" id="pet_name" placeholder="pet_name">

  <label>Choose an existing owner:</label>

  <br></br>

  <%Owner.all.each do |owner|%>
     <input type="radio" name="owner[name]" id="<%=owner.id%>" placeholder="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner == owner %>><%=owner.name%></input>
 <%end%>

  <br></br>

  <label>and/or, create a new owner:</label>
      <br></br>
      <label>name:</label>
        <input  type="text" name="owner_name" id="owner_name" placeholder="owner_name"></input>
      <br></br>
   <input type="submit" name="Update Pet" value="Update Pet">
 </form>
